@model BRILLIANT_NFT_MARKET_FRONT.Models.Order_Dto
@{
	bool isPaypal = Model.ORDER_TYPE_CODE!.Equals("0002");
}
<div id="detailBuyComplete">
	<div class="g-container">
		<div class="medium-containerCover">
			<div class="container">
				<h1 class="g-pageTitle">purchase complete</h1>
				<div class="g-infoBox">
					<div class="productInfo">
						<div class="payTextBox">
							<div>감사합니다!</div>
							<div>@(isPaypal ? "결제가 완료되었습니다." : "결제 완료후 구매가 완료됩니다.")</div>
						</div>
					</div>
					<div class="buyerInfo">
						<div class="title">주문 정보</div>
						@if (isPaypal)
						{
							<div class="infoText onlyNFT">
								<div class="g-title">NFT 번호</div>
								<div>#@Model.TOKEN_ID</div>
							</div>
						}
						<div class="infoText">
							<div class="g-title">주문 번호</div>
							<div>@Model.ORDER_NUMBER</div>
						</div>
						<div class="infoText">
							<div class="g-title">일시</div>
							<div>@Model.INS_DATE</div>
						</div>
					</div>
					@if (isPaypal)
					{
						<div class="payInfo">
							<div class="title">결제 정보</div>
							<div class="infoText">
								<div class="g-title">금액</div>
								<div>@Model.ORDER_AMOUNT￦</div>
							</div>
							<div class="infoText">
								<div class="g-title">결제방법</div>
								<div>페이팔</div>
							</div>
						</div>
					}
					else
					{
						<div class="payInfo">
							<div class="title">결제 정보</div>
							<div class="infoText">
								<div class="g-title">금액</div>
								<div>@Model.ORDER_AMOUNT￦</div>
							</div>
							<div class="payContents">
								<div class="g-title">결제 방법</div>
								<div class="payChoose">
									<div>
										<div class="tab-content active">
											<div class="g-title">무통장 입금</div>
											<div class="payTextBox">
												<div>은행 : @Model.BANK_NAME</div>
												<div>예금주 : @Model.ACCOUNT_OWNER</div>
												<div>계좌번호 : @Model.ACCOUNT_NUMBER</div>
											</div>
										</div>
									</div>
								</div>
							</div>
							<div class="infoText">
								<div class="g-title">입금자명</div>
								<div>@Model.DEPOSIT_NAME</div>
							</div>
						</div>
					}
				</div>
				<div class="btnBox">
					<button type="button" class="g-btn monotone" onclick="MovePath('/')">메인으로</button>
					<button type="button" class="g-btn" onclick="MovePath('/My/Order/@Model.ORDER_NUMBER/Detail?paymentType=@Model.ORDER_TYPE_CODE')">상세정보</button>
				</div>
			</div>
		</div>
	</div>
</div>